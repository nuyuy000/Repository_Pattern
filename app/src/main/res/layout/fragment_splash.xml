<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/black"
    tools:context=".SplashFragment">

    <ImageView
        android:id="@+id/hand"
        android:layout_width="147dp"
        android:layout_height="155dp"
        android:layout_marginStart="132dp"
        android:layout_marginTop="304dp"
        android:background="@drawable/rounded_putih"
        android:src="@drawable/ic_hand_pass_svgrepo_com"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_ayo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="44dp"
        android:layout_marginBottom="220dp"
        android:text="AYO"
        android:textColor="@color/white"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/hand"
        app:layout_constraintEnd_toEndOf="@id/hand" />

    <TextView
        android:id="@+id/tvID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Bayar Zakat"
        android:textColor="#ECE1E1"
        android:textSize="20dp"
        app:layout_constraintLeft_toLeftOf="@id/tv_ayo"
        app:layout_constraintRight_toRightOf="@id/tv_ayo"
        app:layout_constraintTop_toBottomOf="@id/tv_ayo" />

</androidx.constraintlayout.widget.ConstraintLayout>